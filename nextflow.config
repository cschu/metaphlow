manifest {
	author = "Christian Schudoma"
	defaultBranch = "main"
	description = "Metaphlan4 workflow"
	name = "metaphlow"
	nextflowVersion = ">=22.10.6"
	version = "0.7.2"
}

process {
	errorStrategy = { task.attempt <= 3 ? "retry" : "ignore" }
	maxRetries = 3
	cache = "lenient"

	withName: prepare_fastqs {
		// no scratch dir, no container!
		executor = "local"
		container = null
		scratch = null
	}
}


params {
	publish_mode = "copy"
}